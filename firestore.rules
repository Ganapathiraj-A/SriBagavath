rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection: Anyone authenticated can read (to check role), no one can write via app
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Transactions: Publicly createable. Read by Admin or by Device ID (Public) or by User ID.
    match /transactions/{txId} {
      allow read: if isAdmin() || resource.data.deviceId != null; // Soft identity via deviceId
      allow create: if true; // Public registration
      allow update, delete: if isAdmin();
    }
    
    // Transaction Images: Same as transactions
    match /transaction_images/{txId} {
      allow read: if isAdmin() || resource.data.userId != null || true; // Images are specifically fetched by ID
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Catalog data: Publicly readable, writeable only by admins
    match /programs/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /schedule/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /programTypes/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Global fallback: Deny everything else
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
